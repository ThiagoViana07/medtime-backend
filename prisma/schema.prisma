generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String             @id @default(uuid())
  name         String
  email        String             @unique
  passwordHash String
  phone        String?
  role         Role               @default(PATIENT)
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  // Se paciente, lista de cuidadores
  careFor      CaregiverPatient[] @relation("CaregiverRelation_patient")
  // Se cuidador, lista de pacientes
  caregivers   CaregiverPatient[] @relation("CaregiverRelation_caregiver")
  medications  Medication[]
}

model CaregiverPatient {
  id          String   @id @default(uuid())
  caregiver   User     @relation("CaregiverRelation_caregiver", fields: [caregiverId], references: [id])
  caregiverId String
  patient     User     @relation("CaregiverRelation_patient", fields: [patientId], references: [id])
  patientId   String
  createdAt   DateTime @default(now())

  @@index([caregiverId])
  @@index([patientId])
}

model Medication {
  id        String   @id @default(uuid())
  patient   User     @relation(fields: [patientId], references: [id])
  patientId String
  name      String
  dosage    String
  frequency String
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // schedules Schedule[]
  // treatments TreatmentHistory[]
}

enum Role {
  PATIENT
  CAREGIVER
}

enum NotificationType {
  MEDICATION
  APPOINTMENT
  EXAM
}
